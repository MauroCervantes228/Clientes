<%- include("../templates/encabezado")%>
<%- include("../templates/menu")%>
<div class="container mt-5">
    <form action="/nuevocliente" method="post" enctype="multipart/form-data">
        <div class="card">
            <div class="card-header">
                <h1>Nuevo cliente</h1>
            </div>
            <div class="card-body">
                <input class="form-control mb-3" type="text" name="nombre" id="nombre" placeholder="Nombre" autofocus>
                <input class="form-control mb-3" type="text" name="cliente" id="cliente" placeholder="Cliente">
                <input class="form-control mb-3" type="password" name="password" id="password" placeholder="Password">
                <input class="form-control mb-3" type="file" name="foto" id="foto">
            </div>
            <div class="card-footer">
                <button class="form-control btn btn-primary" type="submit">Guardar cliente</button>
            </div>
        </div>
    </form>
</div>
